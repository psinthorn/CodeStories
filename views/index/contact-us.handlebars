<div class="container">
    <h1>
        <p class="header-text-01">Get in Touch</p>
    </h1>
    <div class="hr-1px"></div>
    <div class="row">
        <div class="col s12 m8 l8">
            <p class="header-text-01">
                You can contact us any way that is convenient for you. We are available 24/7 via email, Phone or Our Social. You can also
                use a quick contact form below or visit our office personally. We would be happy to answer your questions.
            </p>

            <div class="row">
                <div class="input-field col s12">
                    {{#if errors}}
                    <div class="card-panel red lighten-4">
                        {{#each errors}} {{error}}
                        <br> {{/each}}
                    </div>
                    {{/if}} {{#each successMsg}}

                    <div class="card-panel green lighten-4">
                        <h3>
                            <p style="text-align: center"> {{thankYou}} </p>
                        </h3>
                        <p style="text-align: center">{{success}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="row">

                <form action="/mail/contact" method="post">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="firstName" name="firstName" type="text" class="validate" value={{firstName}}>
                            <label for="firstName" data-error="First Name Require">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="lastName" name="lastName" type="text" class="validate" value={{lastName}}>
                            <label for="lastName">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">email</i>
                            <input id="toEmail" name="toEmail" type="email" class="validate" value={{toEmail}}>
                            <label for="toEmail" data-error="Invalid Email Address" data-success="Valid Email Address">Email</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 m12 l12">
                            <i class="material-icons prefix">edit</i>
                            <input id="subject" name="subject" type="text" class="validate" value={{subject}}>
                            <label for="subject">Subject</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">drafts</i>
                            <textarea value="You message here" id="emailBody" name="emailBody" class="materialize-textarea">{{emailBody}}</textarea>
                            <label for="emailBody">Message</label>
                        </div>
                    </div>
                    {{!--
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div> --}} {{!--
                    <div class="row">
                        <div class="input-field col s12">
                            <div class="g-recaptcha" data-sitekey="your_site_key"></div>
                        </div>
                    </div> --}}


                    <div class="row">
                        <div class="input-field col s12">
                            <input type="submit" value="Send" class="btn right">
                        </div>

                    </div>

                </form>
            </div>

        </div>

        <div class="col s12 m1 l1"></div>

        <div class="col s12 m3 l3">

            {{#each contents}} {{!-- {{content[0].title}} --}} {{/each}}
            <div class="row header-text-01">
                <h5>Socials</h5>
                <div class="hr-1px-p10"></div>
                <div class="col s12 m12 l12">
                    <i class="fa fa-facebook-official small" aria-hidden="true"></i>
                    <i class="fa fa-google-plus-square small" aria-hidden="true"></i>
                    <i class="fa fa-youtube-square small" aria-hidden="true"></i>
                    <i class="fa fa-instagram small" aria-hidden="true"></i>
                </div>
            </div>

            <div class="row header-text-01">
                <h5>Email</h5>
                <div class="hr-1px-p10"></div>
                <div class="col s12 m2 l2">
                    <p>
                        <i class="material-icons">drafts</i>
                    </p>
                </div>
                <div class="col s12 m10 l10">
                    <p> toffalo@apdl.ca
                    </p>
                </div>
            </div>

            <div class="row header-text-01">
                <h5>Phone</h5>
                <div class="hr-1px-p10"></div>
                <div class="col s12 m2 l2">
                    <p>
                        <i class="material-icons">call</i>
                    </p>
                </div>
                <div class="col s12 m10 l10">
                    <p> + 1 514 995-0037
                    </p>
                </div>

            </div>

            <div class="row header-text-01">
                <h5>Address</h5>
                <div class="hr-1px-p10"></div>
                <div class="col s12 m2 l2">
                    <p>
                        <i class="material-icons">location_on</i>
                    </p>
                </div>
                <div class="col s12 m10 l10">
                    <p>APDL
                        <br>
                        <span>QC, Montreal </span>
                        <br>
                        <span>Canada 00000</span>
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>