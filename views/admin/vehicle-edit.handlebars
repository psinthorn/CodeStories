<div class="container">


    <div class="row">

        {{> _msg}}

        <div class="col s12 m6 l6">
            <h4>Add vehicle type and rate</h4>
            <div class="hr-1px"></div>

            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/vehicle/{{vehicle.id}}?_method=PUT" method="post">
                            <input type="hidden" name="_method" value="PUT" >

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="vehicleType" value="{{vehicle.vehicleType}}">
                                    <label for="vehicleType">Vehicle Type</label>

                                </div>

                                <div class="input-field col s12 m12 l12">
                                    <h5>Descriptions</h5>
                                    <textarea id="desc" name="desc" class="materialize-textarea">{{vehicle.desc}}</textarea>
                                    {{!-- <label for="desc">Descriptions</label> --}}

                                </div>

                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="imgUrl" value="{{vehicle.imgUrl}}">
                                    <label for="imgUrl">Image URL</label>

                                </div>
                            </div>    

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select vehicle.status}}
                                        <option value="public" selected>Public</option>
                                        <option value="private">Private</option>
                                        <option value="unpublished">Unpublished</option>
                                        {{/select}}
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>

                            <div class="row">
                                <input type="submit" value="Update" class="btn right">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>