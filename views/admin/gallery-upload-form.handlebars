 {{!-- Image Upload --}}
<div class="container">

    <div class="col s12 m12 l12">


        <h4>{{ apartment.title }} > Gallery > Manage</h4>
        <div class="hr-1px"></div>

        <form action="/admin/apartment/gallery/{{ apartment.id }}" method="post" enctype="multipart/form-data">

            <div class="card white darken-1">
                <div class="card-content gray-text">

                    <h5>Add image to gallery</h5>
                    <div class="hr-1px"></div>
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Choose Image</span>
                            <input type="file" name="name">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>


                    {{!--
                    <div class="row">
                        <div class="input-field col s12 m12 l12">

                            <input type="text" name="img" value="{{ apartment.imgUrl }}">
                            <label for="img">Current Image</label>

                        </div>
                    </div> --}}



                    <div class="row">
                        <input type="submit" value="Add" class="btn right">
                    </div>

                </div>
            </div>


        </form>



        <div class="row">



            {{#each apartment.gallery }}
            <div class="col s12 m3 l3">

                <div class="row">
                    <div class="col s12 m12 l12">
                        <div class="card">
                            <div class="card-image">
                                <img src="/gallery/{{ name }}" alt="{{ name }}" class="responsive-img">
                               

                                 <form action="/admin/apartment/gallery/{{ id }}?_method=DELETE" method="post" id="delete-form">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn red right" >X</button>
                                </form>
                                   
                               
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
            {{/each}}
        </div>

    </div>

</div>