<div class="container">


    <div class="row">

        {{> _msg}}

        <div class="col s12 m6 l6">
            <h4>Edit Apartment</h4>
            <div class="hr-1px"></div>

            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/apartment/{{apartment.id}}?_method=PUT" method="post">
                            <input type="hidden" name="_method" value="PUT" >

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="name" value="{{vehicle.vehicleType}}">
                                    <label for="name">Apartment Name</label>

                                </div>

                                <div class="input-field col s12 m12 l12">
                                    <h5>Descriptions</h5>
                                    <textarea id="desc" name="desc" class="materialize-textarea">{{ apartment.desc }}</textarea>
                                    {{!-- <label for="desc">Descriptions</label> --}}

                                </div>

                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="imgUrl" value="{{vehicle.imgUrl}}">
                                    <label for="imgUrl">Image URL</label>

                                </div>
                            </div>    

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select vehicle.status}}
                                        <option value="public" selected>Public</option>
                                        <option value="private">Private</option>
                                        <option value="unpublished">Unpublished</option>
                                        {{/select}}
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>

                            <div class="row">
                                <input type="submit" value="Update" class="btn right">
                            </div>
                        </form>
                    </div>
                </div>
            </div>



                  <form action="/tours/price-rate/{{tour.id}}" method="post">


                    <div class="row">

                        <div class="input-field col s12 m4 l4">
                            <input type="text" name="sale">
                            <label for="net">Sale Price</label>
                        </div>

                        <div class="input-field col s12 m4 l4">
                            <input type="text" name="member" value="{{member}}">
                            <label for="member">Member Price</label>
                        </div>

                        <div class="input-field col s12 m4 l4">
                            <input type="text" name="promotion" value="{{promotion}}">
                            <label for="promotion">Promotion Price</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 m4 l4">
                            <input type="text" name="discount" value="{{discount}}">
                            <label for="discount">Discount Price</label>
                        </div>
                        <div class="input-field col s12 m4 l4">
                            <input type="text" name="net" value="{{net}}">
                            <label for="net">Net Price</label>
                        </div>
                    </div>

                    <div class="row">
                        <input type="submit" value="Add Price" class="btn right">
                    </div>

                </form>  















        </div>
    </div>
</div>