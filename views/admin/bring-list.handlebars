<div class="container">

    <div class="row">
        <div class="input-field col s12">
            {{#if errors}}
            <div class="card-panel red lighten-4">
                {{#each errors}} {{error}}
                <br> {{/each}}
            </div>
            {{/if}} {{#each successMsg}}

            <div class="card-panel green lighten-4">
                {{success}}
            </div>
            {{/each}}
        </div>
    </div>


    <h3>Facilities List</h3>
    <div class="hr-1px"></div>

    {{#if facilities }}

        

    <div class="row">

        <div class="col s12 m12 l12">
            <div class="card white darken-1">
                <div class="card-content gray-text">

                    
                {{#each facilities }}

                    <div class="row">


                        <div class="input-field col s12 m3 l3">

                            <input type="text" name="title" value="{{ title}}" readonly>
                            <label for="title">Title</label>

                        </div>

                        <div class="input-field col s12 m3 l3">

                            <input type="text" name="value" value="{{ value }}" readonly>
                            <label for="title">Value</label>

                        </div>


                      

                     
                            <div class="input-field col s12 m3 l3">
                                <select name="status" id="status" aria-readonly="yes">
                                    {{#select status }}
                                    <option value="public">Public</option>
                                    <option value="private">Private</option>
                                    <option value="Unpublished">unpublished</option>
                                    {{/select }}
                                </select>
                                <label for="status">Status</label>
                            </div>
                      

                          <div class="input-field col s12 m3 l3">

                            <div class="left-align">
                                     <a href="/admin/facility/{{ id }}" class="btn">Edit</a>
                            </div>

                        </div>


                    </div>


                    {{/each }}


                    

                </div>


             

            </div>



        </div>
    </div>

    {{else }}

        No faciliies found! 
    {{/if}}    
    </div>