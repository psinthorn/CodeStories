<div class="container">


    <div class="row">

        {{> _msg}}

        <div class="col s12 m8 l8">
            <h4>Edit apartment intro</h4>
            <div class="hr-1px"></div>

            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/apartment-intro/{{ intro.id }}?_method=PUT" method="post">
                             <input type="hidden" name="_method" value="PUT">

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="title" value="{{ intro.title }}">
                                    <label for="title">Apartment Intro Title</label>

                                </div>
                            </div>

                            <div class="row">

                                <div class="input-field col s12 m12 l12">

                                    <h5>Intro Detail</h5>
                                    <textarea id="desc" name="desc" class="materialize-textarea">{{ intro.desc }}</textarea>

                                </div>

                            </div>

                              <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="owner" value="{{ intro.owner }} ">
                                    <label for="owner">Apartment Owner</label>

                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select intro.status }}
                                        <option value="Public" selected>Public</option>
                                        <option value="Private">Private</option>
                                        <option value="Unpubblished">Unpubblished</option>
                                        {{/select}}
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>

                            <div class="row">
                                <input type="submit" value="update" class="btn right">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


<div class="col s12 m4 l4">
            <h4>Current List</h4>
            <div class="hr-1px"></div>

        {{#if intro }}                  
        <table class="highlight">
        <thead>
          <tr>
              <th>Intro</th>
              <th>Status</th>
              <th>Manage</th>
          </tr>
        </thead>

        <tbody>

       
          <tr>
            <td>{{ intro.title }}</td>
            <td>{{ status }}</td>
            <td>
               <a href="/admin/apartment-intro/show/{{ id }}">Viewe</a>   | 
                <a href="/admin/apartment-intro/{{ id }}">Edit</a>  | 
                 <a href="/admin/apartment-intro/delete/{{ id }}">Delete</a>
            </td>
          </tr>

      

        </tbody>
      </table>

      {{ else }}

        No apartments available

      {{/if}}

        </div>
    </div>
</div>