<div class="container">
    
    <div class="row">
                <div class="input-field col s12">
                    {{#if errors}}
                    <div class="card-panel red lighten-4">
                        {{#each errors}} {{error}}
                        <br> {{/each}}
                    </div>
                    {{/if}} {{#each successMsg}}

                    <div class="card-panel green lighten-4">
                         {{success}}
                    </div>
                    {{/each}}
                </div>
    </div>


    <h3>Current Apartments List</h3>
    <div class="hr-1px"></div>
    <div class="row">
        <a href="/admin/apartments/add"><div class="btn right">Add New Apartment</div></a>
    </div>
    <div class="row">
       
        {{#if apartments}}
        <table class="striped">
        <thead>
          <tr>
              <th>Apartment Title</th>
              {{!-- <th class="hide-on-small-only">Description</th> --}}
              <th>Address</th>
              <th>Status</th>
              <th colspan="2" class="center-align">Manage</th>
              
          </tr>
        </thead>

        <tbody>

          
            {{#each apartments }}

            
          <tr>
            <td>{{ title }}</td>
            <td>{{ address }}</td>
            {{!-- <td class="hide-on-small-only">{{ stripTags (truncate desc 100) }}</td> --}}
            <td>{{ status }}</td>
            <td class="right-align"> <a href="/admin/apartments/{{ id }}" class="btn">Edit</a> </td>
            
            <td class="left-align">
                 <form action="/admin/apartments/{{ id }}?_method=DELETE" method="post" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">X</button>
                </form>
            
            

            </td>


          </tr>
           {{/each}}
            
        </tbody>
      </table>

        {{else}}
        <p>Currently is no apartment available!</p>
       {{/if}}
     

    </div>
</div>