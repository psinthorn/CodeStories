<h4>
    {{ apartment.title }}
</h4>

<p class="font-grey"><i class="material-icons small">place</i> {{#each apartment.locations }} {{!-- {{ title }} --}} {{ addr1 }} {{ addr2 }} {{ district }} {{ city }} {{ province }} {{ country
    }} {{ postCode }} {{/each }}

</p>
<br>
{{> _apdl-gallery }}

<div class="row">
    <div class="col s12 m8 l8">
        <p class="header-text-01">
            {{{ apartment.desc }}}
        </p>

        <br>
        <h5>Amenities</h5>
        {{!--
        <div class="divider"></div> --}}
        <br>
        <div class="row">
            {{#each apartment.facilities}}
            <div class="col s12 m6 l6">

                <div class="col s12 m12 l12">

                    <div class="col s2 m2 l2">

                        <i class="material-icons">check</i>

                    </div>
                    <div class="col s10 m10 l10">

                        {{ title }}

                    </div>

                </div>


            </div>
            {{/each}}
            <br>
            <br>

        </div>


    </div>

    {{!--
    <div class="col s12 m1 l1"></div> --}}

    <div class="col s12 m4 l4">

        {{#each apartment.subcontact }}

        <div class="row" style="background-color: #eee ">
            <div class="col s12 m12 l12">
                <p class="header-text-01">
                    <h5>{{ title }}</h5>
                    <div class="divider"></div>
                    <p class="blue-grey-text">
                        <b>Contact: </b> {{ person }}</p>
                    <p>
                        <a class="blue-grey-text" href="tel:{{ phone }}">
                            <b>Phone: </b> {{ phone }}</a>
                    </p>
                    <p class="blue-grey-text">
                        <b>WhatsApp:</b> {{ whatsapp}}</p>
                    <p class="blue-grey-text">
                        <b>Skype: </b> {{ skype }}</p>
                    <p>
                        <a class="blue-grey-text" href="mailto: {{email}} ?Subject=Enquiry from APDL.CA">
                            <b>Courriel: </b> {{ email }}</a>
                    </p>
                    <p class="blue-grey-text">
                        <b>Working Hours: </b>
                        <br>{{ workingHour }} </p>

                </p>
            </div>

        </div>
    

        {{/each}}

       {{> _maps-apartment }}

    </div>
</div>




<div class="row">




    <div class="col s12 m8 l8">
        <div class="row">

            <div class="col s12 m6 l6">
                <img src="" alt="">
            </div>

            <div class="col s12 m6 l6">

            </div>

        </div>
    </div>
</div>